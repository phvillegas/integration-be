{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@db/*": [
                "src/db/*"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}